## edit.html
<h1>Todotask#edit</h1>

<%= form_for(@todotask, url:{controller:'todotask', 
    action:'edit', id}) do |form| %>
      <div class="form-group">
      <label for="title">タイトル</label>
      <%= form.text_field :title,{class:"form-control"} %>
    </div>
    <div class="form-group">
      <label for="content">内容</label>
      <%= form.text_field :content,{class:"form-control"} %>
    </div>
    <%= form.submit "更新" %>
  <% end %>
  <p class="link"><a href="/todotask">
      &lt;&lt; ※トップページに戻る</a></p>