<h3>投稿を編集</h3>

<%= form_with(model: @todotask, local: true) do |form| %>
  <div>
    <%= form.label :title, "タイトル：" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body, "内容：" %>
    <%= form.text_area :body %>   
  </div>

  <div>
    <%= form.submit "投稿を更新", data: { confirm: '上記の内容で投稿を更新します。よろしいですか？' }  %>
  </div>
<% end %>