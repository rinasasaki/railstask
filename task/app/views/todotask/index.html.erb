<%# todo一覧 %>

  <%=form_tag(controller:'todotask', action:'index') do %>
  <div class="form-group">
    <label for="title">タイトル</label>
    <%= text_field_tag("title","",{class:"form-control"}) %>
  </div>
  <div class="form-group">
    <label for="content">内容</label>
    <%= text_field_tag("content","",{class:"form-control"}) %>
  </div>
  <input type="submit">
<% end %>

<table class="table">

<tr>
    <th>タイトル</th><th>内容</th>
    <th colspan="2"></th>
</tr>


<tr>
  <% @todotask.each do |obj| %>
  <td class= "title"><%= check_box_tag :check%><%= obj['title'] %></td> 
  <td class= "content"><%= obj['content'] %></td>
</tr>
</table>
  <% end %>



